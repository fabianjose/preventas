        <h1>Mis ofertas</h1>
  


 
 
    
 

 

            
 <table class="table table-bordered table-hover">
    <thead>
        <th>#</th>       
   
        <th>Cliente</th>
        <th>tipo de documento</th>
        <th>cedula</th>
        <th>correo</th>
        <th>Tipo de Servicio</th>
        <th>estatus</th>
        <th>Ver Detalles</th>


             
             
        
            <%if(user[0].rol==1){%>
                <th>Delete</th>
                <th>Update</th>
            
          
                <% }%>

    </thead>

    <tbody>
        <% if (data) { %>     
            <% for(var i=0; i<data.length;i++) { %> 
                 
                <tr>
                    <td> <%=(i+1) %> </td>
                   
                    
                    <td> <%= data[i].nombre_completo %> </td>
                    <td> <%= data[i].tipo_documento %> </td>
                    <td> <%= data[i].numero_documento %> </td>
                    <td> <%= data[i].correo %> </td>
                    <td> <%= data[i].tipo_servicio %> </td>
                   
                   
                    <% if(data[i].estatus == 0) {  %>
                        
                        <td> <button class="btn btn-info"> AGENDADA</button>  </td>       
                           <%  }  %>
                        <% if(data[i].estatus == 1) {  %>
                           <td> <button class="btn btn-warning"> PENDIENTE</button>     </td>
                            <%  }  %>
                            <% if(data[i].estatus == 2) {  %>
                               <td> <button class="btn btn-primary"> INSTALADA</button>     </td>
                                <%  }  %>
                                <% if(data[i].estatus == 3) {  %>
                                  <td>  <button class="btn btn-success"> COMPLETADA</button>     </td>
                                    <%  }  %>
                                    <% if(data[i].estatus == 4) {  %>
                                       
                                     <td>   <button class="btn btn-danger"> DECLINADA</button> </td>
                                        <%  }  %>
                                        <% if(data[i].estatus == 5) {  %>
                                       
                                            <td>   <button class="btn btn-dark"> SIN GESTION</button> </td>
                                               <%  }  %>
                  
             
                  
                    <td> <a href="/detalles/<%=data[i].id%>" class="btn btn-success">DETALLES</a> </td>

                    <%if(user[0].rol==1){%>
                      
                    <td> <a href="/delete/oferta/<%=data[i].id%>" class="btn btn-danger">Borrar</a> </td>
                    <td> <a href="/ofertasupdate/<%=data[i].id%>" class="btn btn-warning">Update</a> </td>
               

                     
                  
                        <% }%>
        
                 
                      
                </tr>
                
                                           <% } %> 
        <% } %>     
    </tbody>
</table>
 
 
 
 
 
 
 
 
 
 
