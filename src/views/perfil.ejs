        <h1>Crear una oferta</h1>
     


            <h1>INFORMACION DEL SUSCRIPTOR</h1>
            <form action="/crearOferta" method="post">

                <div class="container">
                    <div class="row">
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Nombre Completo suscriptor <br><br> </b> </p></label>
                                <input type="text" name="nombre_completo" id="" placeholder="Nombre Completo Suscriptor" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Selecciona un tipo <br> de documento</b> </p></label>
                                <select class="form-select" name="tipo_documento" aria-label="Default select example">
                                    <option selected>Selecciona un tipo de documento</option>
                                    <option value="Cedula Ciudadania">Cedula Ciudadania</option>
                                    <option value="Cedula de Extranjeria">Cedula de Extranjeria</option>
                                    <option value="NIT">NIT</option>
                                    <option value="OTRA">OTRA</option>
                                  </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Ingresa el Numero <br> de documento</b> </p></label>
    
                                <input type="text" name="numero_documento" id="" placeholder="Numero de documento" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Ingresa la fecha de<br> expedicion del documento</b> </p></label>
    
                                <input type="text" name="fecha_expedicion" id="" placeholder="Fecha de Expedicion" class="form-control">
                            </div>
                        </div>

                    </div>
                    <br><br>
                    <div class="row">
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Numero de telefono Celular <br><br> </b> </p></label>
                                <input type="text" name="telefono_celular" id="" placeholder="ingrese celular" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Numero de telefono fijo <br><br> </b> </p></label>
                                <input type="text" name="telefono_fijo" id="" placeholder="ingrese telefono fijo" class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Selecciona un tipo <br> de estrato</b> </p></label>
                                <select class="form-select" name="estrato" aria-label="Default select example">
                                    <option selected>Selecciona un tipo de documento</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="2">5</option>
                                    <option value="3">6</option>
                                    <option value="No Residencial">No Residencial</option>
                                  </select>
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                             </div>
                        </div>

                    </div>
                    <br><br>

                    <div class="row">
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Ingrese Correo <br><br> </b> </p></label>
                                <input type="text" name="correo" id="" placeholder="ingrese correo " class="form-control">
                            </div>
                        </div>
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Ciudad <br><br> </b> </p></label>
                                <input type="text" name="ciudad" id="" placeholder="ingrese la ciudad" class="form-control">
                            </div>
                        </div>
                      
                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Municipio <br><br> </b> </p></label>
                                <input type="text" name="municipio" id="" placeholder="ingrese el municipio" class="form-control">
                            </div>
                        </div>

                        <div class="col-12 col-sm-3 text-center">
                            <br>
                            <div class="form-group card">
                                <label for=""><p> <b>Direccion Cliente <br><br> </b> </p></label>
                                <input type="text" name="direccion" id="" placeholder="ingrese la Direccion" class="form-control">
                            </div>
                        </div>

                    </div>
                    <br><br>

                </div>

               

                <input  type="hidden" name="usuario_ID" id=""  value="<%= user[0].id %> " class="form-control">

              
              
                
    
                    
                    <button type="submit" class="btn btn-success">
                        guardar datos
                    </button>
        
            </form>
       
   


 
 
    
 </div>

 

            
 <table class="table table-bordered table-hover">
    <thead>
        <th>#</th>
        <th>id</th>
        <th>titulo</th>
             
             
        
            <%if(user[0].rol==1){%>
                <th>Delete</th>
                <th>Update</th>
          
                <% }%>

    </thead>

    <tbody>
        <% if (data) { %>     
            <% for(var i=0; i<data.length;i++) { %> 
                 
                <tr>
                    <td> <%=(i+1) %> </td>
                    <td> <%= data[i].id %> </td>
                    <td> <%= data[i].titulo %> </td>
             
                  
                   
                    <%if(user[0].rol==1){%>
                      
                    <td> <a href="/delete/oferta/<%=data[i].id%>" class="btn btn-danger">Borrar</a> </td>
                    <td> <a href="/update/<%=data[i].id%>" class="btn btn-warning">Update</a> </td>
                     
                  
                        <% }%>
        
                 
                      
                </tr>
                
                                           <% } %> 
        <% } %>     
    </tbody>
</table>
 
 
 
 
 
 
 
 
 
 
 
 
