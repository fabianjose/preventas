                <form action="/add" method="post">

                    <div class="form-group">
                        <input type="text" required name="nombre" id="" placeholder="USUARIO" class="form-control">
                    </div>   <br>
                    <div class="form-group">
                        <input type="text" required name="correo" id="" placeholder="correo electronico" class="form-control">
                    </div>  <br>
                    <div class="form-group">
