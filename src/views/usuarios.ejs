
 
 
<%- include ('partials/header')  %>

<div class="row mt-5">
    <div class="col-7">
        <table class="table table-bordered table-hover">
            <thead>
                <th>#</th>
              
                <th>Nombre</th>
                <th>Correo</th>
                
                <th>ROL</th>
                <th>Delete</th>
                <th>Update</th>

            </thead>

            <tbody>
                    <% for(var i=0; i<data.length;i++) { %> 
                         
                        <tr>
                            <td> <%=(i+1) %> </td>
                           
                            <td> <%= data[i].nombre %> </td>
                            <td> <%= data[i].correo %> </td>
                          
                            
                                 <% if(data[i].rol==1){ %>
                                    <td> SUPERADMIN </td>
                                     <% } %> 
                                     <% if(data[i].rol==2){ %> 
                                        <td> ADMIN </td>
                                         <% } %> 
                                         <% if(data[i].rol==3){ %> 
                                            <td> SUBADMIN </td>
                                             <% } %> 
                                             <% if(data[i].rol==4){ %> 
                                                <td> GESTOR </td>
                                                 <% } %> 
                                                 <% if(data[i].rol==5){ %> 
                                                    <td> FREELANCE </td>
                                                     <% } %>

                                                 <% if(data[i].rol==6){ %> 
                                                    <td> IN-HOUSE </td>
                                                     <% } %>                                  
                             <td> <a  href="#" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal<%=i%>" >borrar</a> </td>
                            <td> <a href="/update/<%=data[i].id%>" class="btn btn-warning">Actualizar</a> </td>
                            

                            <div class="modal fade" id="exampleModal<%=i%>" tabindex="-1" aria-labelledby="exampleModalLabel<%i%>" aria-hidden="true">
                                <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel<%=i%>">Seguro que quiere Borrarlo?</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      si borra no se podra recuperar
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancelar</button>
                                       <a href="/delete/<%=data[i].id%>" class="btn btn-danger">Borrar</a>  <h1><%=data[i].id%></h1>

                                    </div>
                                  </div>
                                </div>
                              </div>
                        </tr>              
                <% } %>     
            </tbody>
        </table>

    </div>

    <div class="col-5">
       
        <div class="card p-3 text-center">
            <h2>Crear nuevo  usuario</h2>
            <div class="card-body">
                <form action="/add" method="post">

                    <div class="form-group">
                        <input type="text" required name="nombre" id="" placeholder="USUARIO" class="form-control">
                    </div>   <br>
                    <div class="form-group">
                        <input type="text" required name="correo" id="" placeholder="correo electronico" class="form-control">
                    </div>  <br>
                    <div class="form-group">
                        <input type="password" required name="password" id="" placeholder="contraseÃ±a" class="form-control">
                    </div> <br>
                    <div class="form-group ">
                        <label for="">Rol </label>
                            <select class="custom-select form-control" name="rol" aria-label="Default select example">
                            <option value="1">Super Admin</option>
                            <option value="2">Admin</option>
                            <option value="3">Sub Admin</option>
                            <option value="4">Gestor</option>
                            <option value="5">Freelance</option> 
                            <option value="6">In-House</option>
                          </select>
                    </div>
                    <div class="form-group mt-5">
                        <button type="submit" class="btn btn-success">
                            guardar datos
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


