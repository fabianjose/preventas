
 
 
<%- include ('partials/header')  %>
  
 


<div class="row mt-5">
    <div class="col-7">
        <table class="table table-bordered table-hover">
            <thead>
                <th>#</th>
              
                <th>Nombre</th>
                <th>Correo</th>
                
                <th>ROL</th>
                <th>Delete</th>
                <th>Update</th>

            </thead>

            <tbody>
                <% if (data) { %>     
                    <% for(var i=0; i<data.length;i++) { %> 
                         
                        <tr>
                            <td> <%=(i+1) %> </td>
                           
                            <td> <%= data[i].nombre %> </td>
                            <td> <%= data[i].correo %> </td>
                          
                            
                                 <% if(data[i].rol==1){ %> 
                                    <td> Freelance </td>
                                     <% } %> 
                                     <% if(data[i].rol==2){ %> 
                                        <td> in-house </td>
                                         <% } %> 
                                         <% if(data[i].rol==3){ %> 
