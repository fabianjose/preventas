                            <td> <a href="/update/<%=data[i].id%>" class="btn btn-warning">Actualizar</a> </td>
                            

                            <div class="modal fade" id="exampleModal<%=i%>" tabindex="-1" aria-labelledby="exampleModalLabel<%i%>" aria-hidden="true">
                                <div class="modal-dialog">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title" id="exampleModalLabel<%=i%>">Seguro que quiere Borrarlo?</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      si borra no se podra recuperar
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancelar</button>
                                       <a href="/delete/<%=data[i].id%>" class="btn btn-danger">Borrar</a>  <h1><%=data[i].id%></h1>

                                    </div>
                                  </div>
                                </div>
                              </div>
                        </tr>              
                <% } %>     
            </tbody>
        </table>

    </div>

    <div class="col-5">
       
        <div class="card text-center">
            <h1>Crear nuevo  usuario</h1>
