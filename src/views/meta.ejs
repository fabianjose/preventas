<%- include ('partials/header')  %>         
 <div class="row mt-4">
     <div class="col">
        <div class="row pt-2">
            <h2>Crear meta</h2>        
        </div>
      
        <div class="container">
            <div class="row col-sm-8 card  text-center">
                <div class="container card-body pt-4" id="formContainer">
        
                  <form class="form"  role="form" method="post">
                    <div class="form-group mt-2" >
                    <label>Nombre de la meta</label>
                    <a href="#" id="flipToRecover" class="flipLink">
                      <div id="triangle-topright"></div>
                    </a>
                    <input type="text" class="form-control" name="nombre" id="loginEmail" placeholder="nombre" required autofocus>
                    </div>
                    <div class="form-group pt-2">
                    <label>Tarifa de la meta</label>

                    <input type="number" class="form-control" name="valor" id="loginPass" placeholder="Valor" required>
                </div>
                 <div class="form-group pt-2">
                    <label>Categoría</label>

                    <select name="categoria" class="form-control custom-select">
                        <% categorias.forEach( cat => { %>
                            <option value="<%= cat.id %>"><%= cat.descripcion %></option>
                        <% }) %>
                        
                    </select>
                </div>
                 <div class="form-group pt-2">
                    <label>Tipo de Usuario</label>
                    <select name="tipo_usuario" class="form-control custom-select">
                        <% usuario_tipos.forEach( tu => { %>
                            <option value="<%= tu.id %>"><%= tu.descripcion %></option>
                        <% }) %>
                    </select>
                </div>
                    <div class="row pt-4">
                        <div class="col">
                            <label>Mes de la meta</label>
                                <select class="custom-select form-control" name="mes" id="">
                                    <option value="0">Enero</option>
                                    <option value="1">Febrero</option>
                                    <option value="2">Marzo</option>
                                    <option value="3">Abril</option>
                                    <option value="4">Mayo</option>
                                    <option value="5">Junio</option>
                                    <option value="6">Julio</option>
                                    <option value="7">Agosto</option>
                                    <option value="8">Septiembre</option>
                                    <option value="9">Octubre</option>
                                    <option value="10">Noviembre</option>
                                    <option value="11">Diciembre</option>
                                </select>
                        </div>
                        <div class="col">
                            <label>Año</label>
                            <select class="form-control custom-select" name="año" id="">
                                <option value="2021">2021</option>
                                <option value="2022">2022</option>
                                <option value="2023">2023</option>
                            </select>                          
                        </div>
                        <div class="form-group mt-4">
                            <label>Campaña</label>
                            <select name="campaña" class="form-control custom-select">
                                 <% campañas.forEach( c => { %>
                            <option value="<%= c.id %>"><%= c.nombre %></option>
                        <% }) %>
                            </select>
                        </div>
                    </div>
                    <button class="btn btn-success btn-block mt-4" type="submit">Crear</button>
                </form>
                </div> <!-- /container -->
            </div>
        </div>

     </div>
     <div class="col pt-2">
        <div class="row">
            <h4>Lista de Metas</h4>
            <table class="table table-striped">
                <thead>
                    <th>
                        <tr>
                        <td>Descripción</td>
                        <td>Mes</td>
                        <td>Tarifa</td>
                        <td>Categoría</td>
                         <td>Tipo Usuario</td>
                        </tr>
                    </th>
                </thead>
                <tbody>
                    
                        <% 
                         metas.forEach( meta  =>  { %>
                        <tr>
                        <td><a href="/asignaMeta/<%= meta.id %>"><%= meta.descripcion %></a></td>
                        <td><%= meta.mes + 1  %></td>
                        <td><%= meta.tarifa %></td>
                        <td><%= meta.categoria %></td>
                        <td><%= meta.tipo %></td>
                        </tr>
                        <% }) %>
                    
                </tbody>
            </table>
        </div>
     </div>
 </div>
 <%- include('partials/footer') %>